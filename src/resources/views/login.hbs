<div class="mt-5">
    <h1 class="mb-5">Enter your login information below!</h1>
    <form method='POST' action='/login' class='needs-validation mt-4' {{! enctype='multipart/form-data' }}>
        <div class='container'>
            <div class='row d-flex justify-content-center align-items-center'>
                <div class='col'>
                    <div class='card card-registration'>
                        <div class='row g-0'>
                            <div class='col-xl-6 d-none d-xl-block' style=' padding: 0 !important; '>
                                <img src='/images/img-login-page.jpeg' alt='Sample photo' class='img-fluid'
                                    style='border-top-left-radius: .25rem; border-bottom-left-radius: .25rem; height: 100%; object-fit: cover;' />
                            </div>

                            <div class='col-xl-6'>
                                <div class='card-body text-black'>
                                    <h3 class='mb-3 mt-3 text-uppercase text-lg-center text-md-center text-sm-center'>
                                        Log in to Shin
                                    </h3>

                                    <div class='form-outline mb-4'
                                        style='padding-left: 10px !important;padding-right: 10px !important;'>
                                        <label class='form-label' for='email'>
                                            Your email<span class="error">{{errorEmail}}</span>
                                        </label>
                                        <input type='email' id='email' name='email' {{!
                                            placeholder='Type your first name' }} class='form-control form-control-lg'
                                            style='font-size: 16px; !important' required />
                                    </div>
                                    <div class='form-outline mb-4'
                                        style='padding-left: 10px !important;padding-right: 10px !important;'>
                                        <label class='form-label' for='password'>
                                            Password<span class="error">{{errorPassword}}</span>
                                        </label>
                                        <input type='password' id='password' name='password' {{!
                                            placeholder='Type your first name' }} class='form-control form-control-lg'
                                            style='font-size: 16px; !important' required />
                                    </div>

                                    <div class="redirect-page"
                                        style='padding-left: 10px !important;padding-right: 10px !important;'>
                                        Don't have account?
                                        <a href="/renderRegister">
                                            Sign up
                                        </a>
                                    </div>

                                    <div class='d-flex justify-content-end'>
                                        <button type='submit' class='btn btn-lg ms-2'
                                            style='color: black;background-color: rgb(215, 0, 30)'>
                                            Login
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>